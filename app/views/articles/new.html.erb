<%= link_to 'Wikinimous', "/articles" %>

<h1>New article</h1>

<div class="container">
  <form method="post" action="/articles">
    <div class="form-group">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" class="form-control" name="title" placeholder="Title">
    </div>
    <div class="form-group">
      <textarea data-editor="markdown" rows="10" class="form-control" name="content" id="article_content" placeholder="Content"></textarea>
    </div>
    <input type="submit" class="btn btn-primary" value="Create Article">
  </form>
</div>


<%= link_to 'Back', "/articles" %>
